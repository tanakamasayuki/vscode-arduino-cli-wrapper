{
  "name": "vscode-arduino-cli-wrapper",
  "displayName": "%ext.displayName%",
  "description": "%ext.description%",
  "version": "1.5.3",
  "publisher": "tanakamasayuki",
  "icon": "images/icon.png",
  "license": "CC0-1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/tanakamasayuki/vscode-arduino-cli-wrapper.git"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Other"
  ],
  "main": "./extension.js",
  "extensionPack": [
    "marus25.cortex-debug",
    "ms-vscode.cpptools"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:**/*.ino"
  ],
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "arduinoCliView",
          "name": "%view.arduinoCli%",
          "icon": "images/icon.png"
        }
      ]
    },
    "commands": [
      {
        "command": "arduino-cli.refreshView",
        "title": "%cmd.refreshView%"
      },
      {
        "command": "arduino-cli.examples",
        "title": "%cmd.examples%"
      },
      {
        "command": "arduino-cli.inspector",
        "title": "%cmd.inspect%"
      },
      {
        "command": "arduino-cli.expandAll",
        "title": "%cmd.expandAll%"
      },
      {
        "command": "arduino-cli.sketchNew",
        "title": "%cmd.sketchNew%"
      },
      {
        "command": "arduino-cli.runTreeAction",
        "title": "%cmd.runTreeAction%"
      },
      {
        "command": "arduino-cli.sketchYamlHelper",
        "title": "%cmd.sketchYamlHelper%"
      },
      {
        "command": "arduino-cli.runArbitrary",
        "title": "%cmd.runArbitrary%"
      },
      {
        "command": "arduino-cli.version",
        "title": "%cmd.version%"
      },
      {
        "command": "arduino-cli.listBoards",
        "title": "%cmd.listBoards%"
      },
      {
        "command": "arduino-cli.listAllBoards",
        "title": "%cmd.listAllBoards%"
      },
      {
        "command": "arduino-cli.configureWarnings",
        "title": "%cmd.configureWarnings%"
      },
      {
        "command": "arduino-cli.boardDetails",
        "title": "%cmd.boardDetails%"
      },
      {
        "command": "arduino-cli.compile",
        "title": "%cmd.compile%"
      },
      {
        "command": "arduino-cli.buildCheck",
        "title": "%cmd.buildCheck%"
      },
      {
        "command": "arduino-cli.versionCheck",
        "title": "%cmd.versionCheck%"
      },
      {
        "command": "arduino-cli.cleanCompile",
        "title": "%cmd.cleanCompile%"
      },
      {
        "command": "arduino-cli.upload",
        "title": "%cmd.upload%"
      },
      {
        "command": "arduino-cli.debug",
        "title": "%cmd.debug%"
      },
      {
        "command": "arduino-cli.monitor",
        "title": "%cmd.monitor%"
      },
      {
        "command": "arduino-cli.configureIntelliSense",
        "title": "%cmd.configureIntelliSense%"
      },
      {
        "command": "arduino-cli.setProfile",
        "title": "%cmd.setProfile%"
      },
      {
        "command": "arduino-cli.setFqbn",
        "title": "%cmd.setFqbn%"
      },
      {
        "command": "arduino-cli.setPort",
        "title": "%cmd.setPort%"
      },
      {
        "command": "arduino-cli.setBaud",
        "title": "%cmd.setBaud%"
      },
      {
        "command": "arduino-cli.uploadData",
        "title": "%cmd.uploadData%"
      },
      {
        "command": "arduino-cli.runWokwi",
        "title": "%cmd.runWokwi%"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "arduino-cli.expandAll",
          "when": "view == arduinoCliView",
          "group": "navigation@2"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "%config.title%",
      "properties": {
        "arduino-cli-wrapper.path": {
          "type": "string",
          "default": "arduino-cli",
          "description": "%config.path.description%"
        },
        "arduino-cli-wrapper.additionalArgs": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "%config.additionalArgs.description%"
        },
        "arduino-cli-wrapper.compileWarnings": {
          "type": "string",
          "enum": [
            "workspace",
            "none",
            "default",
            "more",
            "all"
          ],
          "default": "workspace",
          "markdownDescription": "%config.compileWarnings.description%",
          "enumDescriptions": [
            "%config.compileWarnings.enum.workspace%",
            "%config.compileWarnings.enum.none%",
            "%config.compileWarnings.enum.default%",
            "%config.compileWarnings.enum.more%",
            "%config.compileWarnings.enum.all%"
          ]
        },
        "arduino-cli-wrapper.verbose": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "%config.verbose.description%"
        },
        "arduino-cli-wrapper.localBuildPath": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "%config.localBuildPath.description%"
        },
        "arduino-cli-wrapper.lint.m5gfxIncludes": {
          "type": "array",
          "default": [
            "M5Atom.h",
            "M5AtomDisplay.h",
            "M5AtomS3.h",
            "M5Capsule.h",
            "M5Core2.h",
            "M5CoreInk.h",
            "M5CoreS3.h",
            "M5Dial.h",
            "M5DinMeter.h",
            "M5EPD.h",
            "M5GFX.h",
            "M5ModuleDisplay.h",
            "M5ModuleRCA.h",
            "M5NanoC6.h",
            "M5PoECAM.h",
            "M5Stack.h",
            "M5Station.h",
            "M5StickC.h",
            "M5StickCPlus.h",
            "M5StickCPlus2.h",
            "M5TimerCAM.h",
            "M5Unified.h",
            "M5Unified.hpp",
            "M5UnitGLASS.h",
            "M5UnitGLASS2.h",
            "M5UnitLCD.h",
            "M5UnitMiniOLED.h",
            "M5UnitOLED.h",
            "M5UnitRCA.h"
          ],
          "items": {
            "type": "string"
          },
          "description": "%config.lint.m5gfxIncludes.description%"
        },
        "arduino-cli-wrapper.lint.fsIncludes": {
          "type": "array",
          "default": [
            "FFat.h",
            "FS.h",
            "HTTPClient.h",
            "HTTPUpdate.h",
            "HTTPUpdateServer.h",
            "LittleFS.h",
            "Middlewares.h",
            "SD.h",
            "SD_MMC.h",
            "SPIFFS.h",
            "WebServer.h"
          ],
          "items": {
            "type": "string"
          },
          "description": "%config.lint.fsIncludes.description%"
        }
      }
    }
  }
}